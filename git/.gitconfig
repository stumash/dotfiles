# in the files listed in the `path =` snippets below, define a `user` section like:
# [user]
#     name = Stuart Mashaal
#     email = <email address>
[includeIf "gitdir:~/flourish/"]
    path = ~/flourish/.gitconfig
[includeIf "gitdir:~/me/code/"]
    path = ~/me/code/.gitconfig
[includeIf "gitdir:~/dotfiles/"]
    path = ~/me/code/.gitconfig

[push]
    default = upstream
[alias]
    cm = commit
    cmm = commit -m
    a = add
    aa = add -A
    aacm = !git add -A && git commit
    aacmm = !git add -A && git commit -m
    f = fetch
    b = branch
    ba = branch --all
    bc = branch --show-current
    bg = "!function g_bg() { git branch | rg $1 | fzf -1 | choose -1; }; g_bg"
    bag = !git branch --all | rg
    bd = branch -d
    bD = branch -D
    bn = checkout -b
    ch = checkout
    chg = "!function gchg() { git checkout $(git branch | rg \"$1\" | fzf -1 | choose -1); }; gchg"
    chag = "!function gchag() { git checkout $(git branch -a | rg \"remotes.*$1\" | choose -f / 2 | sort | uniq | fzf -1 | choose -1); }; gchag"
    ls = ls-files
    s = status
    ss = stash save
    sp = stash pop
    sd = stash drop
    sl = stash list
    lg = log --decorate --graph
    d = diff
    dc = diff --cached
    dm = diff master
    dw = diff --word-diff
    ps = push
    pl = pull
    i = init
    rs = reset
    rsh = reset --hard
    rsc = reset --cached
    m = merge
    mm = merge master
[diff]
    algorithm = patience

[delta]
    features = decorations
    line-numbers = true
    max-line-length = 0 # lines occupy full terminal width
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only --features=interactive
[color]
    ui = true
