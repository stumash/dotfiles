[push]
    default = current
[alias]
    cm = commit
    cmm = commit -m
    a = add
    aa = add -A
    aacm = !git add -A && git commit
    aacmm = !git add -A && git commit -m
    b = branch
    ba = branch --all
    bd = branch -d
    bD = branch -D
    bn = checkout -b
    ch = checkout
    ls = ls-files
    s = status
    sa = stash
    lg = log --decorate --graph --all
    d = diff
    dw = diff --word-diff
    ps = push
    pl = pull
    i = init
    rs = reset
    rsc = reset --cached
    m = merge
    mm = merge master
[diff]
    algorithm = patience

[delta]
    features = decorations
    line-numbers = true
    max-line-length = 120
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
